<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#444444</item>
        <item name="colorPrimaryDark">#444444</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/mainBackground
        </item>
        <item name="android:windowBackground">@color/mainBackground</item>
    </style>

    <style name="AbstractButton">
        <item name="android:background">@drawable/abstract_button_background</item>
    </style>

    <style name="KeyButton" parent="@style/AbstractButton">
        <item name="android:textColor">@color/abstractButton_text</item>
        <item name="android:textSize">@dimen/keyButton_textSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/keyButton_diameter</item>
        <item name="android:layout_width">@dimen/keyButton_diameter</item>
    </style>

    <style name="FunctionButton" parent="@style/AbstractButton">
        <item name="android:layout_height">@dimen/functionButton_diameter</item>
        <item name="android:layout_width">@dimen/functionButton_diameter</item>
    </style>

</resources>
